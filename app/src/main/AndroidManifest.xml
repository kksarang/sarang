<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sarang">

    <application
        android:allowBackup="true"
        android:icon="@drawable/saran"
        android:label="@string/app_name"
        android:roundIcon="@drawable/saran"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sarang">
        <activity android:name=".GroupChatActivity">

        </activity>
        <activity android:name=".ChatActivity"
            android:theme="@style/Theme.Sarang.NoActionBar"/>

        <activity android:name=".SetupProfileActivity" />

        <activity android:name=".OTPActivity"
            android:windowSoftInputMode="stateVisible"/>

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PhoneNumberActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts">

        </meta-data>
    </application>

</manifest>